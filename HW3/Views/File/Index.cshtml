@model IEnumerable<HW3.Models.FileModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p><a href="">CSS Tutorial</a></p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @*the first one is the text and the second is the action*@

                @Html.ActionLink("Download", "Download", new { item.FileName }) |
                @Html.ActionLink("Delete", "Delete", new { item.FileName })
            </td>
        </tr>
       
    }
       
    

</table>




